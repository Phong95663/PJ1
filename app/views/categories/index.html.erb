<div class="col-md-3">
  <h3 class="text-success">Easy Tree Example</h3>
  <br>
  <div class="easy-tree">
    <div class="easy-tree-toolbar">
      <%= form_for @category, remote: true do |f| %>
      <div class="create">
        <div class="input-group welld">
          <%= f.text_field :name, class: "form-control" %>
          <span class="input-group-btn">
            <%= f.submit "Submit", class: "btn btn-default btn-success confirm" %>
          </span>
        </div>
      </div>
      <% end %>
    </div>
    <ul id="root">
      <%= render @categories %>
    </ul>
  </div>
</div>
<script>
    (function ($) {
        function init() {
            $('.easy-tree').EasyTree({
                addable: true,
                editable: true,
                deletable: true
            });
        }

        window.onload = init();
    })(jQuery)
</script>
